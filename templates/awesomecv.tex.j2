\vspace{0.8mm}
{\color{deepblue}\rule{\linewidth}{2pt}}
{\fontsize{11pt}{1.1em}\bodyfont\bfseries\color{deepblue} \hspace{4pt} Key Projects}
\vspace{0.8mm}

\begin{cventries}
{%- for project in projects %}
\cventry
{ {\color{modernpurple}\small {{ project.name | bold }}} }
{ }

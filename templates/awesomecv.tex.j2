% awesomecv.tex.j2 – Elegant Single-Page ATS-Optimized Template
% Compile with xelatex or latexmk
% Optimized for Applicant Tracking Systems (ATS) with elegant single-page design

\documentclass[11pt,a4paper,oneside]{awesome-cv}

%-------------------------------------------------------------------------------
%                Required Packages
%-------------------------------------------------------------------------------
\RequirePackage{array, enumitem, ragged2e, geometry, fontspec, unicode-math, xcolor, hyperref, parskip, graphicx}

%-------------------------------------------------------------------------------
%                Font Configuration - Compact and elegant
%-------------------------------------------------------------------------------
% Roboto for headers and titles
\RequirePackage{roboto}
% Source Sans Pro for body text  
\RequirePackage[default,opentype]{sourcesanspro}

% Set font families
\renewcommand*{\headerfont}{\roboto}
\renewcommand*{\bodyfont}{\sourcesanspro}
\renewcommand*{\bodyfontlight}{\sourcesansprolight}

%-------------------------------------------------------------------------------
%                Logo Command
%-------------------------------------------------------------------------------
% Raw block to avoid Jinja2 parsing of LaTeX commands
{% raw %}
\newcommand{\companylogo}[1]{%
  \raisebox{-0.1em}{\includegraphics[height=0.8em]{logos/#1}}%
}

\newcommand{\logoads}{\companylogo{ads.png}}
\newcommand{\logocontinental}{\companylogo{continental.png}}
\newcommand{\logoenseeiht}{\companylogo{enseeiht.png}}
{% endraw %}

%-------------------------------------------------------------------------------
%                Elegant Blue/Black/Purple Theme - Refined
%-------------------------------------------------------------------------------
\definecolor{deepblue}{HTML}{1A237E}        % Deep blue primary
\definecolor{elegantblack}{HTML}{2C2C2C}    % Elegant black
\definecolor{modernpurple}{HTML}{673AB7}    % Modern purple
\definecolor{lightpurple}{HTML}{9C27B0}     % Light purple accent
\definecolor{textdark}{HTML}{263238}        % Dark text
\definecolor{textlight}{HTML}{757575}       % Light text

% Set awesome-cv colors
\colorlet{awesome}{deepblue}

%-------------------------------------------------------------------------------
%                Compact Page Layout
%-------------------------------------------------------------------------------
\geometry{left=0.8cm, right=0.8cm, top=0.6cm, bottom=0.6cm, footskip=0.2cm}

% Very compact spacing adjustments
\renewcommand{\acvSectionTopSkip}{0.8mm}
\renewcommand{\acvSectionContentTopSkip}{0.6mm}
\setlength{\parskip}{0.03em}
\setlength{\itemsep}{0.05em}

% Header separator
\renewcommand{\acvHeaderSocialSep}{\enspace|\enspace}

%-------------------------------------------------------------------------------
%                Personal Information
%-------------------------------------------------------------------------------
\name{ {{- basics.name.split(' ')[0] -}} }{ {{- ' '.join(basics.name.split(' ')[1:]) -}} }
\position{ {{- basics.label | bold -}} }
\address{ {{- basics.location.city -}}, {{- basics.location.countryCode -}} }
\email{ {{- basics.email -}} }

{% for p in basics.profiles or [] -%}
{%- if p.network == "GitHub" -%}
\github{ {{- p.username -}} }
{%- elif p.network == "LinkedIn" -%}
\linkedin{ {{- p.username -}} }
{%- endif -%}
{%- endfor %}

%-------------------------------------------------------------------------------
\begin{document}

% Compact elegant header
\makecvheader[C]

% Professional Summary - compact and elegant
\vspace{0.5mm}
{\color{deepblue}\rule{\linewidth}{2pt}}
{\fontsize{11pt}{1.1em}\bodyfont\bfseries\color{deepblue} \hspace{4pt} Professional Summary}
\vspace{0.8mm}

{\color{textdark}{{ basics.summary | bold_and_links | replace('\n', ' ') | trim }}}

\vspace{1.5mm}

% Two-column layout - optimized spacing
\noindent%
\begin{minipage}[t]{0.28\textwidth}
% LEFT SIDEBAR - compact and elegant

{\color{modernpurple}\rule{\linewidth}{1.5pt}}
{\fontsize{10pt}{1.1em}\bodyfont\bfseries\color{modernpurple} \hspace{3pt} Skills}
\vspace{0.8mm}

\begin{itemize}[leftmargin=0.6em, nosep, itemsep=0.6mm]
{%- for skill in skills %}
\item {\color{elegantblack}\textbf{\scriptsize {{ skill.name | bold }}} } 

{\color{textdark}\tiny {{ skill.keywords | join(', ') | bold }}}
{%- endfor %}
\end{itemize}

\vspace{1.5mm}
{\color{modernpurple}\rule{\linewidth}{1.5pt}}
{\fontsize{10pt}{1.1em}\bodyfont\bfseries\color{modernpurple} \hspace{3pt} Languages}
\vspace{0.8mm}

\begin{itemize}[leftmargin=0.6em, nosep, itemsep=0.6mm]
{%- for lang in languages %}
\item {\color{elegantblack}\textbf{\scriptsize {{ lang.language | bold }}} } — {\color{textdark}\scriptsize {{ lang.fluency | bold }}}
{%- endfor %}
\end{itemize}

{%- if references %}
\vspace{1.5mm}
{\color{modernpurple}\rule{\linewidth}{1.5pt}}
{\fontsize{10pt}{1.1em}\bodyfont\bfseries\color{modernpurple} \hspace{3pt} References}
\vspace{0.8mm}

\begin{itemize}[leftmargin=0.6em, nosep, itemsep=0.8mm]
{%- for ref in references %}
\item {\color{elegantblack}\textbf{\scriptsize {{ ref.name | bold }}} } 

{\color{textlight}\tiny {{ ref.reference | bold }}}
{%- endfor %}
\end{itemize}
{%- endif %}

\end{minipage}%
\hfill%
\begin{minipage}[t]{0.69\textwidth}
% RIGHT COLUMN - compact professional content

% Professional Experience - streamlined
\vspace{0.5mm}
{\color{deepblue}\rule{\linewidth}{2pt}}
{\fontsize{11pt}{1.1em}\bodyfont\bfseries\color{deepblue} \hspace{4pt} Professional Experience}
\vspace{0.8mm}

\begin{cventries}
{%- for job in work %}

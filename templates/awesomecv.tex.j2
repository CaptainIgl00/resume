}
{%- endfor %}
\end{cventries}
{%- endif %}

% Education - streamlined
\vspace{0.8mm}
{\color{deepblue}\rule{\linewidth}{2pt}}
{\fontsize{11pt}{1.1em}\bodyfont\bfseries\color{deepblue} \hspace{4pt} Education}
\vspace{0.8mm}

\begin{cventries}
{%- for edu in education %}
\cventry
{ {\color{textdark}\small {{ edu.studyType | bold }}} }
{ {\color{elegantblack}\small {% if edu.institution == "INP ENSEEIHT" -%}
{{ edu.institution | bold }}~\logoenseeiht
{%- else -%}
{{ edu.institution | bold }}
{%- endif %}} }
{ {\color{textlight}\footnotesize {{ edu.location | bold }}} }
{ {\color{textlight}\footnotesize {{ edu.startDate | replace('-', '/') }} -- {{ edu.endDate | replace('-', '/') }}} }
{
{%- if edu.area %}
\begin{cvitems}
\item {\color{textdark}\footnotesize Specialization: {{ edu.area | bold }}}
{%- if edu.notes %}
\item {\color{modernpurple}\footnotesize {{ edu.notes | bold }}}
{%- endif %}
\end{cvitems}
{%- endif %}
}
{%- endfor %}
\end{cventries}

\end{minipage}

\end{document}
